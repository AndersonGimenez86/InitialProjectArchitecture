{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Environment": {
    "HostUri": "http://localhost:5050/",
    "SwaggerPath": "/swagger/v1/swagger.json"
  },
  "Identity": {
    "ApiName": "AG.com-privacy",
    "Authority": "http://localhost:5000",
    "ClientKey": "AG.com-privacy",
    "ClientSecret": "8b95ed02-0ae4-4345-9edc-feeb61f9e284",
    "EnableAuth": true,
    "Scopes": [
      "paymentgateway-integrations"
    ]
  },
  "EventStore": {
    "MongoDbConnectionString": "mongodb://localhost:27017/AG_PAYMENT",
    "MongoDbName": "AG_PAYMENT",
    "Collections": {
      "Payments": {
        "CollectionName": "Payments",
        "PayloadFullyQualifiedTypeName": "AG.Payment.Domain.Events.PaymentMongo"
      },
      "Merchants": {
        "CollectionName": "Merchants",
        "PayloadFullyQualifiedTypeName": "AG.Payment.Domain.Events.MerchantMongo"
      },
      "Shoppers": {
        "CollectionName": "Shoppers",
        "PayloadFullyQualifiedTypeName": "AG.Payment.Domain.Events.ShopperMongo"
      }
    }
  },
  "Kafka": {
    "Clusters": {
      "SharedKafka": {
        "Server": "localhost:9092",
        "EnableAuthentication": false,
        "Username": "user",
        "Secret": "pass",
        "SslCertificateLocation": null,
        "SaslMechanism": "ScramSha512",
        "SecurityProtocol": "SaslSsl"
      }
    },
    "Consumers": {
      "ConsumerFromBankAcquiring": {
        "Cluster": "SharedKafka",
        "TopicName": "AG.com.bank-events-v1",
        "GroupId": "dev-ag-payment",
        "MessageCompressionType": "Gzip",
        "AutoOffsetReset": "Earliest",
        "Enabled": true
      }     
    },
    "Producers": {
      "ProducerAGPayment": {
        "Cluster": "SharedKafka",
        "TopicName": "Payment.gateway-events-v1",
        "Acks": "Leader",
        "MessageCompressionType": "Gzip",
        "RetryBackoffMs": 1000,
        "Enabled": true
      }
    }
  }
}
